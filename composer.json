{
  "name": "cloudbase/loom-spinner",
  "description": "A simple command-line Docker environment spinner for PHP.",
  "version": "3.3.0",
  "autoload": {
    "psr-4": {
      "Loom\\Spinner\\": "src/"
    }
  },
  "scripts": {
    "stan": "./vendor/bin/phpstan analyse -c phpstan.neon",
    "cs": "./vendor/bin/php-cs-fixer fix --dry-run --diff --allow-risky=yes",
    "badge": "./vendor/bin/badger badge:version . && ./vendor/bin/badger badge:license ."
  },
  "require": {
    "symfony/console": "^7.2",
    "symfony/yaml": "^7.2",
    "vlucas/phpdotenv": "^5.6",
    "ext-sockets": "*"
  },
  "require-dev": {
    "loomsoftware/badger": "^1.0",
    "phpstan/phpstan": "^2.1",
    "friendsofphp/php-cs-fixer": "^3.89"
  },
  "bin": [
    "bin/loom"
  ],
  "license": "GPL-3.0-or-later"
}
